<img src="/img/fondo.webp" class="fondo">
<div class="login-box">
    <img src="/img/portada.jpg" class="avatar" alt="Avatar Image">
    <h1>Registrate</h1>
    <form action="/signup" method="post">
        <!-- USERNAME INPUT -->
        <label for="username">Username</label>
        <input name="user" type="text" placeholder="Username" required <!-- PASSWORD INPUT -->
        <label for="password">Contraseña</label>
        <input name="password" type="password" placeholder="Contraseña" maxlength="12" required>
        <!-- NOMBRE INPUT -->
        <label for="nombre">Nombre</label>
        <input name="nombre" type="text" placeholder="Nombre" required>
        <!-- APELLIDO INPUT -->
        <label for="apellido">Apellido</label>
        <input name="apellido" type="text" placeholder="Apellido" required>
        <!-- TELEFONO INPUT -->
        <label for="telefono">Telefono</label>
        <input name="telefono" type="text" placeholder="Telefono" maxlength="10" required>

        <input type="submit" value="Registrar">
        <a href="/auth/login">Ya tienes una cuenta?</a><br>
    </form>
</div>